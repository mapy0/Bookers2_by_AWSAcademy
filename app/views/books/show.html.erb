<div class="container px-5 px-sm-0">
 <div class="row">
   
   <div class="col-md-3"><!--部分テンプレート全体-->
    <%= render 'users/user_info', users: @user %>
    <%= render 'books/post_book', books: @new_book %>
    </div>

<div class="col-md-8 offset-md-1"><!--User page全体-->
<h2>Book detail</h2>
 <table class="table">
  
  <tbody>
  <tr>
  <td><%= @book.title %></td>
  <td><%= @book.body %></td>
  <td><%= @book.user.name %></td>
  
  
  <% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book) %> <!--要変更-->
  <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>
