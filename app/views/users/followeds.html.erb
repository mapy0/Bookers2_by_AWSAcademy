<div class="cover-user-index">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Follow Users</h2>
      
         <% if @users.empty? %>
         <span>ユーザーはいません</span>

        <% else%>
    
        <table class="table">
        <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
        </thead>
  
    <tbody>
      <% @users.each do |user| %>
      <!--User images-->
       <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 40,40, fallback: "no_image.jpg", size:'40x40'%></td>
        <td><%= user.name %></td>
        <td><%= user.followeds.count %></td>
        <td><%= user.followers.count %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
       </tr>
    
       <% end %>
    </tbody>
    </table>
    <% end %>
      </div>
    </div>
  </div>