<!--ユーザのプロフィールを、ページ上部に記述　部分テンプレート-->
 <h2>User info</h2>
  <%= attachment_image_tag users, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
 <table class="table">
  <tbody>

    <tr></tr>
    <tr>
    <th>name</th><th><%= users.name %></th>
    </tr>

    <tr>
    <th>introduction</th><th><%= users.introduction%></th>
    </tr>

  </tbody>
  </table>

  <div class="row">
  　<% if users.id == current_user.id %>
  　<div class="btn btn-sm btn-block border-dark mb-3">
  　<%= link_to  edit_user_path(users) do%><i class="fas fa-user-cog" style="color: darkgray;"></i>
  　<% end %>
  　<% end %>
  　</div>
  </div>
