<!--ユーザのプロフィールを、ページ上部に記述　部分テンプレート-->
 <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
 <table class="table">
  
  <tbody>
    <tr></tr>
    <tr>
    <th>name</th><th><%= user.name %></th>
    </tr>

    <tr>
    <th>introduction</th><th><%= user.introduction%></th>
    </tr>

  </tbody>
  </table>

  <div class="row">
  　<% if user.id == current_user.id %>
  　<%= link_to edit_user_path(current_user) do%><i class="fas fa-user-cog btn btn-sm btn-block border-dark mb-3 style="color: darkgray;"></i><% end %>
  　<% end %>
  </div>
