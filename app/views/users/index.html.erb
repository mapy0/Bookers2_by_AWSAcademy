<!--User一覧-->
<div class="container px-5 px-sm-0">
 <div class="row">
   
 <div class="col-md-3"><!--部分テンプレート全体-->
<%= render 'users/user_info', users: @user %>
<%= render ' books/post_book',books: @new_book %>
   </div>


<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
    <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
    </tr>
    </thead>
   <tbody> 
   <% @users.each do |user| %>
   <div> <!--User images-->
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
   <p><%= user.name %></p>
   </div>
   <% end %>
   </tbody> 
   </table>
  </div>
 </div>
</div>

